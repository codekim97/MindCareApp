<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E3F2FD">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp">

  </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Keywords"
            android:textColor="#0920A1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/selectcancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/buttonselected"
            android:text="선택해제"
            android:textColor="@color/white" />


    </RelativeLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttonselected"
        android:gravity="center"
        android:padding="15dp"
        android:text="당신에게 해당하는 상태를 선택해 주세요"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:layout_marginRight="30dp"
        android:textColor="@color/buttonDefaultcolor"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="당신의 치료를 도와줄 기관을 찾아드릴게요."
        android:layout_marginBottom="20dp"
        />
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="#0D47A1"
            android:textStyle="bold" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/picknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="0"
            android:textColor="#0D47A1"
            android:textStyle="bold" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/four"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="/4"
            android:textColor="#0D47A1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <android.widget.Button
            android:id="@+id/depressed_button"
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="우울"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:id="@+id/anxiety_button"
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="불안"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:id="@+id/stressbutton"
            android:textColor="#0D47A1"
            android:text="스트레스"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:id="@+id/fearbutton"
            android:textColor="#0D47A1"
            android:text="공포증"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        >

        <android.widget.Button
            android:stateListAnimator="@null"
            android:id="@+id/insomniabutton"
            android:textColor="#0D47A1"
            android:text="불면"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="자해"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="자살시도"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="정신지체"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#90CAF9"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="알콜중독"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="약물중독"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="인터넷 중독"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="종합"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="아동"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="청소년"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="노인"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#90CAF9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="가족"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="재난"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="건강관리요구"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="외래"
            android:background="@drawable/button"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="입원"
            android:background="@drawable/button"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="요양치료 요구"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/button"
            android:text="사회복귀/적응 요구"
            android:textColor="#0D47A1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="성인"
            android:background="@drawable/button"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="생활"
            android:background="@drawable/button"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:textColor="#0D47A1"
            android:text="직업교육"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"/>

        <android.widget.Button
            android:stateListAnimator="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/button"
            android:text="입원(입소)"
            android:textColor="#0D47A1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#90CAF9"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.widget.Button
            android:id="@+id/completebutton"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1.5"
            android:background="@drawable/button"
            android:text="선택완료"
            android:textColor="#0D47A1"
            android:textStyle="bold" />


    </RelativeLayout>


</LinearLayout>