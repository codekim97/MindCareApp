<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_completed_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/records_light"
        android:buttonTint="@color/task_color"
        android:checked="true"
        android:minWidth="0dp" />

    <EditText
        android:id="@+id/et_contents_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/records_dark"
        android:hint="@string/hint_task"
        android:minHeight="48dp" />

</LinearLayout>